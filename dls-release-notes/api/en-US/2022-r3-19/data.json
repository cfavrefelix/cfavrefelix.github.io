                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "<a href=\"https://jira.sage.com/browse/XT-20113\" target=\"_blank\">XT-20113</a>",
                                    "taxonomies": "all"
                                },
                                {
                                    "content": "<p>You can assign tax rates on purchase receipt lines, such as tax determination rules, tax calculation, and tax management.</p>",
                                    "taxonomies": "all"
