                    "content_parts": [
                        {
                            "key": "XT-28204",
                            "title": "Managing non stock items posting",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "<p>Sales shipments and returns, including items not managed in stock, display correctly on goods shipped, not invoiced accounts.</p><p>You can assign stock managed and non-stock managed items to account types or posting classes so they can post to specific general ledger accounts.</p>",
                                    "taxonomies": "all"
                                }
                            ],
                            "taxonomies": {
                                "software": [
                                    "multi-tenant"
                                ],
                                "version": [
                                    "21.0.0"
                                ]
                            }
                        },
                        {
                            "key": "XT-23414",
                            "title": "Mass sales shipment creation from sales order",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "<p>In <b>Mass shipment creation</b>, you can create multiple sales shipments from several sales orders based on filters and grouping rules.</p>",
                                    "taxonomies": "all"
                                }
                            ],
                            "taxonomies": {
                                "software": [
