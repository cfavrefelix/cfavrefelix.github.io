                    "content_parts": [
                        {
                            "key": "XT-27381",
                            "title": "Intrastat query",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "<p>Use the <b>Intrastat declaration</b> query to extract transaction details for all dispatches and arrivals of goods to and from other EU countries. The transactions for the selected company and period display in the results grid. You can edit directly in the grid before exporting to an Excel file.</p>",
                                    "taxonomies": "all"
                                }
                            ],
                            "taxonomies": {
                                "software": [
                                    "multi-tenant"
                                ],
                                "version": [
                                    "21.0.0"
                                ]
                            }
                        },
                        {
                            "key": "XT-26791",
                            "title": "Tax codes defined by country",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "<p>Tax codes are defined by a single country, rather than the legislation. This delivers all existing tax codes according to the destination country, not the company legislation.</p>",
                                    "taxonomies": "all"
                                }
                            ],
                            "taxonomies": {
                                "software": [
                                    "multi-tenant"
                                ],
                                "version": [
                                    "21.0.0"
                                ]
                            }
                        },
                        {
                            "key": "XT-25089",
                            "title": "Association between country and legislation",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "<p>Each country provided by Sage is associated with a legislation. When you set up a new country, you can skip the legislation or select one of the suggested values.</p>",
                                    "taxonomies": "all"
                                }
                            ],
                            "taxonomies": {
                                "software": [
                                    "multi-tenant"
                                ],
                                "version": [
                                    "21.0.0"
                                ]
                            }
                        }
                    ]
                }
