                            "key": "XT-25675",
                            "title": "Amounts in company currency not displayed in Detail panel for purchasing documents",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "The total amounts in company currency are now displayed in the Edit and Detail panels when the transaction currency is different from the company currency.",
                                    "taxonomies": "all"
                                }
                            ],
                            "taxonomies": {
                                "version": [
                                    "19.0.0"
                                ]
                            }
                        },
                        {
                            "key": "XT-24927",
                            "title": "Stock unit price incorrect when the purchase unit is different from the stock unit",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "The correct stock unit price is calculated when determining the unit cost for a purchase receipt when the purchase unit is different from the stock unit.",
                                    "taxonomies": "all"
                                }
                            ],
                            "taxonomies": {
                                "version": [
                                    "19.0.0"
                                ]
                            }
                        },
                        {
                            "key": "XT-24439",
                            "title": "Stock value correction unable to select purchase receipts",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "It is now possible to select a purchase receipt for a stock value correction.",
                                    "taxonomies": "all"
                                }
                            ],
                            "taxonomies": {
                                "version": [
                                    "19.0.0"
                                ]
                            }
                        },
                        {
                            "key": "XT-24370",
                            "title": "Sales order line: stock availability indicator",
                            "highlight": false,
                            "content_parts": [
                                {
                                    "content": "The correct stock quantities display in the Detail panel.",
                                    "taxonomies": "all"
                                }
                            ],
